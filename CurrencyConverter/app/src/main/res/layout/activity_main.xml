<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/currencyConverterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currency_converter_title"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/fromAmountEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/from_amount_label"
        android:inputType="numberDecimal"
        android:padding="16dp"
        android:minWidth="200dp"
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/fromCurrencySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/toAmountEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/to_amount_label"
        android:inputType="numberDecimal"
        android:padding="16dp"
        android:minWidth="200dp"
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/toCurrencySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/convertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/convert_button_text" />
</LinearLayout>
